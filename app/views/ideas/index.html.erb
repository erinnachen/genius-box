<div class="search">
  <form>
    <label for="idea_search">Search</label>
    <input type="text" id="idea_search">
  </form>
</div>
<br/>
<div class="new-idea">
  <%= form_for @idea, url: api_v1_ideas_path, method: :post, remote: true do |f|%>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :body %>
    <%= f.text_field :body %>
    <%= f.submit "Save it!", class: "btn btn-success" %>
  <% end %>
</div>
<div class="ideas">
</div>
